---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% blog.articles.each_with_index do |article, i| %>
  <article>
    <h2><%= link_to article.title, article.url %></h2>
    <time datetime="article.date.strftime('%b %e %G')"><%= article.date.strftime('%b %e, %G') %></time>
    <p><%= Nokogiri::HTML(article.summary).text %></p>
    <p class="read-more"><%= link_to("Read more...", article.url) %></p>
    <%= article.url %>
  </article>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

<h3>Categories</h3>
<% blog.tags.each do |tag, articles| %>
  <li><%= link_to(tag, "/tags/#{tag}/") %></li>
<% end %>
