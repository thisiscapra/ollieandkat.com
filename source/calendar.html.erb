---
pageable: true
---

<% content_for(:title, "Archive") %>
<% content_for(:description, "Archive") %>

<section id="archive">

  <div class="col-left">

    <h1>Archive for
      <% case page_type
         when 'day' %>
        <%= Date.new(year, month, day).strftime('%b %e %Y') %>
      <% when 'month' %>
        <%= Date.new(year, month, 1).strftime('%b %Y') %>
      <% when 'year' %>
        <%= year %>
      <% end %>
    </h1>

    <% if paginate && num_pages > 1 %>
      <p>Page <%= page_number %> of <%= num_pages %></p>

      <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    <% end %>

    <% page_articles.each_with_index do |article, i| %>
      <%= partial "blog_summary", :locals => { :article => article } %>
    <% end %>

    <% if paginate %>
      <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
      <% end %>
    <% end %>

  </div>

  <div class="col-right">
    
    <h3>Categories</h3>
    <ul>
      <% blog.tags.each do |tag, articles| %>
        <li><%= link_to(tag, "/tags/#{tag}/") %></li>
      <% end %>
    </ul>

    <h3>Archive</h3>
    <ul>
      <% blog.articles.group_by {|y| y.date.year }.each do |year, articles| %>
        <li>
          <%= link_to(year, blog_year_path(year)) %>
          <ul>
            <% articles.group_by {|a| a.date.month}.each do |month, month_articles| %>
              <li><%= link_to month_articles.first.date.strftime("%B"), blog_month_path(year, month) %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    <ul>

  </div>

</section>
